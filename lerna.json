{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "version": "independent",
  "workspaces": true,
  "command": {
    "version": {
      "message": "chore(release): release",
      "changelogPreset": "./conventional-changelog/index.js"
    },
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "conventionalCommits": true
    }
  }
}
