{
  "packages": ["packages/*"],
  "version": "0.0.1",
  "npmClient": "npm",
  "changelogPreset": {
    "name": "conventionalcommits",
    "issueUrlFormat": "https://app.clubhouse.io/curbee/story/{{id}}",
    "issuePrefixes": ["CH"]
  },
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "conventionalCommits": true
    },
    "version": {
      "message": "chore(release): release"
    }
  }
}
