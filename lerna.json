{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "version": "independent",
  "workspaces": true,
  "changelogPreset": {
    "name": "conventionalcommits",
    "headerPartial": "./header.hbs",
    "issuePrefixes": ["ch", "CH"],
    "issueUrlFormat": "https://app.clubhouse.io/curbee/story/{{id}}"
  },
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "conventionalCommits": true
    },
    "version": {
      "message": "chore(release): release"
    }
  }
}
